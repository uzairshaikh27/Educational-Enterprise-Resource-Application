<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background2"

    tools:context=".MainActivity3">


    <TextView
        android:id="@+id/textViewTeacher"
        android:layout_width="220dp"
        android:layout_height="100dp"

        android:text="Welcome Teacher!"
        android:textColor="#101010"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />


    <Button
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:backgroundTint="#F6F6FA"
        android:text="Mark Attendance"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <RadioGroup
        android:id="@+id/rga"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:background="#B6D0E4"
        android:backgroundTint="#B6D0E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st_name"
        app:layout_constraintVertical_bias="0.533">

        <RadioButton
            android:id="@+id/ab"
            android:layout_width="125dp"
            android:layout_height="66dp"

            android:backgroundTint="#636161"
            android:text="Absent"
            android:textColor="#121111" />

        <RadioButton
            android:id="@+id/pr"
            android:layout_width="125dp"
            android:layout_height="66dp"
            android:backgroundTint="#636161"
            android:text="Present"
            android:textColor="#121111" />
    </RadioGroup>

    <EditText
        android:id="@+id/st_name"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:drawableStart="@drawable/baseline_person_pin_24"
        android:layout_marginBottom="207dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#B6D0E4"
        android:ems="10"
        android:hint="Enter Student Name"
        android:inputType="textPersonName"
        android:textColorHint="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537" />

    <EditText
        android:id="@+id/st_roll"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#B6D0E4"
        android:ems="10"
android:drawableStart="@drawable/baseline_numbers_24"
        android:hint="Enter Roll Number"
        android:textColorHint="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="209dp"
        android:drawableStart="@drawable/baseline_date_range_24"
        android:layout_height="48dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#B6D0E4"
        android:ems="10"
        android:hint="Enter Today's Date"
        android:inputType="date"
        android:textColorHint="#131313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F8F4F4"
        android:contextClickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883"
        app:srcCompat="@drawable/baseline_logout_24" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mark"
        app:layout_constraintTop_toBottomOf="@+id/rga"
        app:srcCompat="@drawable/baseline_remove_red_eye_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Attendance?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />


</androidx.constraintlayout.widget.ConstraintLayout>